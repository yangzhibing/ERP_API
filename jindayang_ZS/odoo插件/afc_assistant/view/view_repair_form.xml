<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <!-- form 视图-->
        <record id="form_view_afc_repair_form" model="ir.ui.view">
            <field name="name">AFC Repair Form</field>
            <field name="type">form</field>
            <field name="model">afc.repair.form</field>
            <field name="arch" type="xml">
                <form string="维修单">
                    <sheet>
                        <group string="维修单信息">
                            <group name="group_left">
                                <field name="deviceId"/>
                                <field name="userId"/>
                                <field name="faultReason"/>
                                <field name="solutions"/>
                                <field name="repairParts"/>
                                <field name="delayReason"/>
                                <field name="remarks"/>
                            </group>
                            <group name="group_right">
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- tree(list)视图 -->
        <record id="tree_view_afc_repair_form" model="ir.ui.view">
            <field name="name">AFC Repair Form</field>
            <field name="type">tree</field>
            <field name="model">afc.repair.form</field>
            <field name="arch" type="xml">
                <tree string="维修单">
                    <field name="deviceId"/>
                    <field name="userId"/>
                    <field name="faultReason"/>
                    <field name="solutions"/>
                    <field name="repairParts"/>
                    <field name="delayReason"/>
                    <field name="remarks"/>
                </tree>
            </field>
        </record>
    </data>
</openerp>