<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <!-- form 视图-->
        <record id="form_view_afc_apply_record" model="ir.ui.view">
            <field name="name">AFC Apply Record</field>
            <field name="type">form</field>
            <field name="model">afc.apply.record</field>
            <field name="arch" type="xml">
                <form string="报修记录">
                    <sheet>
                        <group string="报修记录">
                            <group name="group_left">
                                <field name="id"/>
                                <field name="recordContent"/>
                            </group>
                            <group name="group_right">
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- tree(list)视图 -->
        <record id="tree_view_afc_apply_record" model="ir.ui.view">
            <field name="name">AFC Apply Record</field>
            <field name="type">tree</field>
            <field name="model">afc.apply.record</field>
            <field name="arch" type="xml">
                <tree string="报修记录">
                    <field name="id"/>
                    <field name="recordContent"/>
                </tree>
            </field>
        </record>
    </data>
</openerp>